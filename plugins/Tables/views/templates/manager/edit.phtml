<script>
/**
 * 显示一个模态框，可选参数：
 *  title: 标题(html)
 *  body: 内容(html)
 *  close.text: 关闭按钮(html)
 *  close.click: 关闭按钮的回调(function)
 *  ok.text: 确认按钮(html)
 *  ok.click: 确认按钮的回调(function)
 *  delay: 延迟多久自动关闭,0表示不会自动关闭(int)
 *  width: 宽，默认auto
 *  height： 高，默认auto
 * @param params
 */
$(function() {
    let a = $('#base').clone();
    a.css('display','block');
    showDialogs({
        title: "<b>添加数据表菜单</b>",
        body: a,
        close: {
            text: "取消",
            click: t => t.close()
        },
        ok: {
            text: "确定",
            click: t => t.close()
        }
    });

    let b = $('#fil').clone();
    b.css('display','block');
    showDialogs({
        title: "<b>添加查询条件</b>",
        body: b,
        close: {
            text: "取消",
            click: t => t.close()
        },
        ok: {
            text: "确定",
            click: t => t.close()
        }
    },'a');
});

</script>







